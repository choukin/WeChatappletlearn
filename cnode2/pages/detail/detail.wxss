.detail-post {
  background-color: #eee;
}
.detail-post-header {
  background-color: #fff;
  line-height: 80rpx;
  padding: 30rpx 34rpx;
  position: relative;
  overflow: hidden;
  border-bottom: 2rpx #ccc solid;
}
.detail-post-title {
  margin: 0;
  padding: 0;
  font-weight: 400;
  font-size: 58rpx;
  color: #80bd01;
}
.detail-post-meta {
  position: relative;
  padding: 26rpx 36rpx 0 36rpx;
  background: #fff;
}
.detail-post-avatar, .detail-post-comment-avatar {
  width: 92rpx;
  height: 92rpx;
  display: block;
  float: left;
  margin-top: 6rpx;
}
.detail-post-avatar-img, .detail-post-comment-avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.detail-post-info, .detail-post-comment-info, .detail-comment-content {
  margin: 0 0 0 100rpx;
  padding: 0 0 0 10rpx;
  position: relative;
  line-height: 40rpx;
  overflow: hidden;
}
.detail-post-author-name, .detail-post-comment-author-name {
  color: #6c6c6c;
  font-size: 40rpx;
  line-height: 60rpx;
  margin-top: 6rpx;
}
.detail-post-time, .detail-post-comment-time {
  line-height: 40rpx;
  font-size: 24rpx;
  color: #a4a4a4;
}
.detail-post-content {
  background-color: #fff;
  padding: 26rpx 36rpx 50rpx 36rpx;
  margin-bottom: 26rpx;
}
.content-info {
  color: #6c6c6c;
  font-size: 36rpx;
  line-height: 40rpx;
  word-wrap: break-word;
  padding: 0;
}
.detail-post-comment {
  background-color: #fff;
}
.detail-post-comment-title {
  font-size: 40rpx;
  line-height: 100rpx;
  padding: 0 36rpx;
  color: #666;
  position: relative;
  border-bottom: 2rpx #ccc solid;
}
.detail-post-comment-item {
  padding: 24rpx 36rpx;
  background: #fff;
  border-bottom: 2rpx #ccc solid;
}
.detail-comment-text {
  margin: 20rpx 0;
  font-size: 30rpx;
}